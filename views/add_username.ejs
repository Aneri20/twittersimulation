<body ng-app="add_username"ng-controller="add_username">


    <div class="text-box">

        <div class="signup-wrapper">
            <h1>Choose a username.</h1>
            <h2 style="color:gray">Don't worry,you can always change it later.</h2>
            <input type="text" class="textbox-control" name="user_name" id="username" placeholder="User Name" required maxlength="20" ng-model="user_name"></br></br>
            <input type="submit" style="color:white" class="submit-button" value="Next" style="position:relative;left:0px;" ng-click="submit();"></br></br>
            <div class="alert alert-danger" ng-hide="username_exists">
                <strong>Sorry,this username is already chosen</strong>
            </div>

            <div class="alert alert-danger" ng-hide="unexpected_error">
                <strong>Unexpected error,try again</strong>
            </div>
        </div>
    </div>
